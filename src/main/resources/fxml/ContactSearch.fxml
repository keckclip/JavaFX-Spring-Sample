<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox fx:id="root"
      fx:controller="com.zenjava.firstcontact.gui.search.ContactSearchPresenter"
      spacing="10"
      xmlns:fx="http://javafx.com/fxml">


    <!-- Search Bar -->
    <HBox spacing="10">
        <children>
            <Label text="Search"/>
            <TextField fx:id="searchField" prefColumnCount="20" onAction="#search"/>
            <Button text="Search" onAction="#search"/>
        </children>
    </HBox>

    <!-- Search Results -->
    <ListView fx:id="resultsList" VBox.vgrow="ALWAYS"/>

</VBox>
